                    @Html.ValidationMessageFor(m => m.Candidate.TwoFaceToFaceSummary.DateSelected)
                    @Html.Bootstrap().LabelFor(m => m.Candidate.TwoFaceToFaceSummary.DateSelected).LabelText("Date")
                </div>
