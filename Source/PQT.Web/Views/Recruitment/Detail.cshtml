             e.preventDefault();
             bootbox.confirm("@Resource.ConfirmApprove", function (isOK) {
                 if (isOK) {
                     $.ajax({
                         url: '@Url.Action("ApprovalAction")?id=@Model.Candidate.ID',
                         type: 'POST',
                         success: function (data) {
                             if (data.IsSuccess) {
                                 location.reload();
