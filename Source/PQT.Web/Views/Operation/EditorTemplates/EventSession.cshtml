                <a href="@Model.TrainerTicketUrl" target="_blank">@Model.TrainerTicket</a>
            }
            @Html.Bootstrap().FileFor(m => m.TrainerTicketFile)
            <br />
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.TrainerTicketRemark).Class("form-control")
                @Html.Bootstrap().LabelFor(m => m.TrainerTicketRemark).LabelText("Remarks")
            </div>
        </td>
        <td>
            @if (Model.TrainerVisa != null && !string.IsNullOrEmpty(Model.TrainerVisa))
