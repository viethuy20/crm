@using PQT.Domain.Enum
@model PQT.Domain.Entities.EventSession

@using (Html.BeginCollectionItem())
{
    <tr>
        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.EventID)
        <td style="white-space: nowrap">@Model.SessionTitle</td>
        <td>
            @if (Model.TrainerInvoice != null && !string.IsNullOrEmpty(Model.TrainerInvoice))
                {
                <a href="@Model.TrainerInvoiceUrl" target="_blank">@Model.TrainerInvoice</a>
            }
            @Html.Bootstrap().FileFor(m => m.TrainerInvoiceFile).ShowValidationMessage(true)
            <br />
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.TrainerInvoiceRemark).Class("form-control")
                @Html.Bootstrap().LabelFor(m => m.TrainerInvoiceRemark).LabelText("Remarks")
            </div>
        </td>
        <td>
            @if (Model.TrainerTicket != null && !string.IsNullOrEmpty(Model.TrainerTicket))
