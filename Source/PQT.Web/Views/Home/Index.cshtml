@using PQT.Domain.Entities
@using PQT.Domain.Enum
@using Resources
@model PQT.Web.Models.HomeModel

@{
    //ViewBag.MenuBarColl = true;
    ViewBag.Title = "Dashboard";
    ViewBag.MenuBarColl = true;
    ViewBag.StartSocket = true;
}

<style>
    .event-panel {
        min-height: 1px;
        padding-left: 12px;
    }
        .event-panel .text-xl {
            text-transform: capitalize;
            font-size: 19px;
        }

        .event-panel .card {
            width: 300px;
            margin-bottom: 12px;
        }

    .event-header {
        position: relative;
        color: #fff;
        padding: 10px;
    }

    .event-footer {
        position: relative;
        background: #eeeeee;
        padding: 3px;
    }

    .link-event {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }

    .notify_panel {
        height: calc(100vh - 460px);
        overflow-y: auto;
    }

    .notify_item {
        padding: 10px;
        border-bottom: 1px solid #cecece;
    }

        .notify_item a {
            text-decoration: none;
            color: #000;
        }

            .notify_item a:hover {
                color: #0aa89e
            }

        .notify_item .timestamp {
            font-style: italic;
            color: #a3a3a3;
        }

    .tier3, .tier1, .tier2, .totalcalled {
        font-style: italic;
    }

    .col-tier3, .col-tier1, .col-tier2, .total-booked, .totalcalled, .total-companies {
        font-weight: bold;
    }
    .text-bold {
        font-weight: bold;
    }
    .text-italic {
        font-style: italic;
    }

    .col-tier1 {
        color: #a94442;
    }

    .col-tier2 {
        color: #31708f;
    }
</style>
<section style="height: calc(100vh - 64px);@(CurrentUser.Identity.Background != null?"background: url("+CurrentUser.Identity.BackgroundUrl+ ") no-repeat center center fixed;-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;" : "")">
    <div class="section-body" style="margin-top: 12px;margin-right: 12px;">
        <div style="display: flex;overflow-x:auto">
            @foreach (var item in Model.Events)
            {
        <!-- BEGIN ALERT - REVENUE -->
                <div class="event-panel" id="event_panel_@item.ID" data-id="@item.ID">
                    <div class="card">
                        <div class="card-body no-padding">
                            <div class="alert no-margin event-header" style="background: @item.BackgroundColor;">
                                @*<strong class="pull-right text-success text-lg">0,38% <i class="md md-trending-up"></i></strong>*@
                                <strong class="text-xl">@item.EventName</strong><br />
                                Event Dates: @item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")
                                <br/>
                                DOC: @item.DateOfConfirmationStr - Closing Date: @item.ClosingDateStr
                                <br />
                                Location: @item.Location
                                <br />
                                Venue: @item.HotelVenue
                                @if (CurrentUser.HasRole("Finance"))
                                {
                                    <a href="@Url.Action("Index", "Booking", new {id = item.ID})" class="link-event">
                                    </a>
                                }
                                else if (CurrentUser.HasRoleLevel(RoleLevel.ManagerLevel))
                                {
                                    <a href="@Url.Action("NCLForManager", "Lead", new {id = item.ID})" class="link-event">
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Index", "Lead", new {id = item.ID})" class="link-event">
                                    </a>
                                }
                            </div>
                            <div class="notify_panel">
                                <div id="dashboard_notify_@item.ID" style="display: none"></div>
                                <div class="notify_items">
                                    <div class="notify_item text-center"><img src="~/Content/img/ajax_loader.gif" /></div>
                                </div>
                            </div>
                            <div class="row no-margin event-footer">
                                <div class="col-sm-5 text-center "><span class="text-italic text-bold">Total booked</span><br/><span class="total-booked">N.A</span></div>
                                <div class="col-sm-7 text-center "><span class="text-italic text-bold">Companies called</span><br /><span class="totalcalled">N.A</span>/<span class="total-companies">N.A</span></div>
                                <div class="col-sm-4  text-center col-tier1"><span class="text-italic">Tier 1</span><br /><span class="tier1">N.A</span>/<span class="total-tier1">N.A</span></div>
                                <div class="col-sm-4  text-center col-tier2"><span class="text-italic">Tier 2</span><br /><span class="tier2">N.A</span>/<span class="total-tier2">N.A</span></div>
                                <div class="col-sm-4  text-center col-tier3"><span class="text-italic">Tier 3</span><br /><span class="tier3">N.A</span>/<span class="total-tier3">N.A</span></div>
                            </div>
                        </div><!--end .card-body -->
                    </div><!--end .card -->
                </div><!--end .col -->
        <!-- END ALERT - REVENUE -->
            }
        </div><!--end .row -->
    </div><!--end .section-body -->
</section>

@Html.Script(
    @<script>
        var eventItems = $(document).find(".event-panel");
        function loadEventNotify(eventId) {
            if (!eventId || eventId == 0)
                return;
            $.ajax({
                global: false,
                url: '@Url.Action("GetNotifyForEvent")?eventId=' + eventId,
                type: 'POST',
                success: function (notifications) {
                    var htmlItems = '';
                    for (var i = 0; i < notifications.length; i++) {
                        var notify = notifications[i];

                        var url = '@Url.Action("Detail", "Lead")?id=' +
                            notify.EntryId +
                            '&eventId=' +
                            notify.EventId;
                        if (notify.NotifyTypeCode == '@NotifyType.Booking.Value') {
                            url = '@Url.Action("Detail", "Booking")?id=' +
                                notify.EntryId +
                                '&eventId=' +
                                notify.EventId;
                        }
                        htmlItems += '<div class="notify_item"><a class="tile-content ink-reaction" href="' +
                            url +
                            '">' +
                            (notify.Seen
                                ? notify.Description + ' - ' + notify.Title
                                : '<b>' + notify.Description + ' - ' + notify.Title + '</b>') +
                            '<br /><span class="timestamp" title="' +
                            notify.Timestamp +
                            '" data-time="' + notify.TimeToString +'">' +
                            moment(notify.TimeToString, "DDMMYYYYhhmmss").fromNow() +
                            '</span></a></div>';
                    }
                    if (htmlItems=='') {
                        htmlItems = '<div class="notify_item text-center notify_not_found"><span class="timestamp">Notify not found</span></div>';
                    }
                    $("#event_panel_" + eventId).find(".notify_items").html(htmlItems);
                },
                error: function () {
                    $("#event_panel_" + eventId).find(".notify_items").html('<div class="notify_item text-center notify_not_found"><span class="timestamp" >Get Notify Error</span></div>');
                }
            });
        }
        @*function loadNewEventNotify() {
            $.ajax({
                global: false,
                url: '@Url.Action("GetNotifyForNewEvent")',
                type: 'POST',
                success: function (notifications) {
