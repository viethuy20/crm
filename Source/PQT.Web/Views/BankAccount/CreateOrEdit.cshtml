@using PQT.Domain.Enum
@using Resources
@model PQT.Domain.Entities.BankAccount
<div class="card card-underline" style="background: white; margin: auto; max-width: 700px; position: relative;">
    <div class="card-head">
        <header>@(Model.ID > 0 ? "Edit Data" : "Add New Data")</header>
    </div><!--end .card-head -->

    @using (Ajax.BeginForm("CreateOrEdit", "routeValues", new AjaxOptions { HttpMethod = "Post", OnFailure = "onFail", OnSuccess = "onSuccess" }, new { @id = "CreateOrEditForm", @class = "form" }))
    {
        <div class="card-body">
            <div class="success hide">
                @using (Html.Bootstrap().Begin(new Alert().Style(AlertColor.Success).Closeable()))
                {
                    @Html.Bootstrap().Label("success").HtmlAttributes(new { @class = "textsuccess" }).LabelText(Resource.SaveSuccessful)
                }
            </div>
            <div class="error hide alert-danger">
                @using (Html.Bootstrap().Begin(new Alert().Style(AlertColor.Error).Closeable()))
                {
                    @Html.Bootstrap().Label("error").HtmlAttributes(new { @class = "texterror" }).LabelText(Resource.SaveFailed)
                }
            </div>
            @Html.HiddenFor(m => m.ID)
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.BankName).Class("form-control text-capitalize").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.BankName).ShowRequiredStar(true)
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.BankAddress).Class("form-control text-capitalize").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.BankAddress)
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.AccountHolderName).Class("form-control code").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.AccountHolderName).ShowRequiredStar(true)
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.AccountHolderAddress).Class("form-control code").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.AccountHolderAddress).ShowRequiredStar(true)
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.AccountNumber).Class("form-control code").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.AccountNumber).ShowRequiredStar(true)
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.Branch).Class("form-control code").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.Branch).LabelText("Branch")
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextBoxFor(m => m.SwiftCode).Class("form-control code").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.SwiftCode).LabelText("SwiftCode")
            </div>
            <div class="form-group">
                @Html.Bootstrap().DropDownListFor(m => m.Currency, EnumerationHelper.ToSelectList<SalaryCurrency>()).Class("form-control").HtmlAttributes(new { required = "required" }).ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.Currency)
            </div>
            <div class="form-group">
                <div class="pull-right">
                    @Html.Bootstrap().ActionLinkButton(Resource.ButtonBackToList, "Index").PrependIcon("md md-arrow-back")
                    @Html.Bootstrap().SubmitButton().Text(Resource.Save).Id("submitbutton").PrependIcon("md md-done").Style(ButtonStyle.Success)
                </div>
            </div>
        </div><!--end .card-body -->
    }
</div><!--end .card -->