            //            $('<input>')
            //                .attr('type', 'hidden')
            //                .attr('id', 'CompaniesSelected_' + rowId)
            //                .attr('name', 'CompaniesSelected')
            //                .val(rowId)
            //        );
            //    });
            //});

        });
    </script>)
