@model PQT.Domain.Entities.Lead
@using PQT.Domain.Enum
@using Resources
<div class="card card-underline" style="background: white; margin: auto; max-width: 700px; position: relative;">
    <div class="card-head">
        <header>Update KPI</header>
    </div><!--end .card-head -->

    @using (Ajax.BeginForm("Update", "routeValues", new AjaxOptions { HttpMethod = "Post", OnFailure = "onUpdateFail", OnSuccess = "onUpdateSuccess" }, new { @id = "UpdateForm", @class = "form" }))
    {
        <div class="card-body">
            <div class="success hide">
                @using (Html.Bootstrap().Begin(new Alert().Style(AlertColor.Success).Closeable()))
                {
                    @Html.Bootstrap().Label("success").HtmlAttributes(new { @class = "textsuccess" }).LabelText(Resource.SaveSuccessful)
                }
            </div>
            <div class="error hide alert-danger">
                @using (Html.Bootstrap().Begin(new Alert().Style(AlertColor.Error).Closeable()))
                {
                    @Html.Bootstrap().Label("error").HtmlAttributes(new { @class = "texterror" }).LabelText(Resource.SaveFailed)
                }
            </div>
            @Html.HiddenFor(m => m.ID)<div class="form-group">
                <div class="checkbox checkbox-styled">
                    <label>
                        <input type="checkbox" class="cbx-sign" id="@Html.IdFor(m => m.MarkKPI)" name="@Html.NameFor(m => m.MarkKPI)" value="@(Model.MarkKPI?"true":"false")" @(Model.MarkKPI ? "checked" : "")>
                        <span>Mark KPI</span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                @Html.Bootstrap().TextAreaFor(m => m.KPIRemarks).Rows(5).Class("form-control").ShowValidationMessage(true)
                @Html.Bootstrap().LabelFor(m => m.KPIRemarks).LabelText("KPI Remarks")
            </div>
            <div class="form-group">
                <div class="pull-right">
                    @Html.Bootstrap().ActionLinkButton(Resource.ButtonBackToList, "Index").PrependIcon("md md-arrow-back")
                    @Html.Bootstrap().SubmitButton().Text(Resource.Save).Id("submitbutton").PrependIcon("md md-done").Style(ButtonStyle.Success)
                </div>
            </div>
        </div><!--end .card-body -->
    }
</div><!--end .card -->