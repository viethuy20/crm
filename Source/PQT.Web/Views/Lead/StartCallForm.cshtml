<section>
    <div class="row">
        <div class="col-md-12" style="padding-bottom: 12px;">
            @Html.Bootstrap().ActionLinkButton("Back to My Call List", "Index").RouteValues(new { id = Model.EventID }).PrependIcon("md md-arrow-back")
