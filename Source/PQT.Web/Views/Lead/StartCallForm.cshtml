                                <div class="tab-pane active" id="step1" style="padding-top: 50px; padding-bottom: 50px">
                                    <div class="col-md-6">
                                        <div class="card card-underline form-group">
                                            <div class="card-head">
                                                <header>
                                                    <b>Companies List</b>
                                                </header>
                                            </div>
                                            <div class="card-body">
                                                <div class="row table-responsive">
                                                    <table class="table no-margin" id="grid_companies">
                                                        <thead>
                                                            <tr>
                                                                <th></th>
                                                                <th>Country</th>
                                                                <th>Company</th>
                                                                <th>Product/Service</th>
                                                                <th>Sector</th>
                                                                <th>Industry</th>
                                                                <th>Business Unit</th>
                                                                <th>Ownership</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                            </div><!--end .card-body -->
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card card-underline form-group">
                                            <div class="card-head">
                                                <header><b>Company Resources</b></header>
                                            </div><!--end .card-head -->
                                            <div class="form">
                                                <div class="card-body ">
                                                    @Html.Partial("_CompanyResourceList", 0)
                                                </div>
                                            </div>
                                        </div><!--end .card -->
                                    </div>
                                </div><!--end #step1 -->
                                <div class="tab-pane" id="step2" style="padding-top: 50px; padding-bottom: 50px">
                                    @Html.Partial("_CallingInfo", Model)
                                </div><!--end #step2 -->
