                 $(nRow).find('input[type="checkbox"]').val(rowId);
                 $(nRow).attr('data-id', rowId);
                 $(nRow).addClass('Tier' + aData["Tier"]);
                 if (company_id_selected_val == rowId) {
                     $(nRow).find('input[type="checkbox"]').prop('checked', true);
                     $(nRow).addClass('selected');
                 }
